<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="@string/Tip_choice_1"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="272dp"
        android:layout_height="78dp"
        android:layout_marginTop="296dp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_found"
        style="@style/button"
        android:text="基金"
        android:onClick="GotoFund"
        android:background="@drawable/button_style"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_ETF"
        android:text="ETF"
        android:onClick="GotoETF"
        style="@style/button"
        android:background="@drawable/button_style"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_found"
        app:layout_constraintStart_toStartOf="@+id/btn_found"
        app:layout_constraintTop_toBottomOf="@+id/btn_found" />

</android.support.constraint.ConstraintLayout>