    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginLeft="20dp"-->
    <!--android:layout_weight="1"-->
    <!--android:text="建議動作"-->
    <!--android:textSize="36sp" />-->

</LinearLayout>